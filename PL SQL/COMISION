CREATE OR REPLACE FUNCTION COMISION(P_SALARIO EMPLOYEES.SALARY%TYPE,
                                    P_COMISION EMPLOYEES.COMMISSION_PCT%TYPE)
RETURN NUMBER AS 
BEGIN
        IF(p_comision IS NULL)
        THEN 
    RETURN 0;
        ELSE 
    RETURN ((P_COMISION)*P_SALARIO/100);
        END IF;

END COMISION;